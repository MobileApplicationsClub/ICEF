<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/CoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/about_us_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/about_us_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F8FF"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/content_about_mac_mac_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="start"
                    android:src="@drawable/mac_logo" />




                <TextView
                    android:id="@+id/content_about_mac_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginTop="40dp"
                    android:text="This app was developed by the Mobile Applications Club BITS Goa"
                    android:textColor="#4169E1"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_about_mac_contributors_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Developers"
                    android:textColor="#191970"
                    android:textSize="22sp" />


                <ImageButton
                    android:id="@+id/content_about_mac_fb_imgbtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitCenter"
                    android:background="#F0F8FF"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_facebook_white" />

                <ImageButton
                    android:id="@+id/content_about_mac_google_play_imgbtn"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:background="#F0F8FF"
                    android:scaleType="fitCenter"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_google_play" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Aayush Singla"
                        android:textColor="#000080"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="f20170815@goa.bits-pilaini.ac.in"
                        android:textColor="#4682B4"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/email_aayush"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:src="@drawable/ic_email_black_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Hardik Gupta"
                        android:textColor="#000080"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="hardik12498@gmail.com"
                        android:textColor="#4682B4"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/email_hardik"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:src="@drawable/ic_email_black_24dp" />

            </LinearLayout>


         <!--   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="\n\n\n"
                android:textColor="#4682B4"
                android:textSize="16sp" />
-->
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </View>
        </LinearLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
