<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/main"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- middle parent child-->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <!-- text views vertical and horizontal-->
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/Event_name"
            android:hint="Speaker Name"
            android:textSize="20sp"
            android:layout_margin="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey700"
            android:id="@+id/topic"
            android:hint="Abstract Topic"
            android:textSize="15sp"
            android:layout_margin="5dp"/>




    </LinearLayout>

        <!--imageview details-->

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:weightSum="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="3.33dp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            app:src="@drawable/ic_my_location_white_24dp"
            android:id="@+id/b_details"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            android:contentDescription="TODO" />



    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.39"
            android:layout_margin="7dp"
            android:id="@+id/deco2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.61"
            android:orientation="horizontal">


            <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/TV_location"
            android:textAlignment="center"
            android:layout_weight="0.3"
            android:text="Location"
            android:layout_marginRight="4dp"
            android:textSize="15sp"
            android:textColor="@color/grey700"/>


            <TextView
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:id="@+id/TV_time"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/grey700"/>

            <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/TV_details"
            android:textAlignment="center"
            android:text="details"
            android:textSize="15sp"
            android:textColor="@color/grey700"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>


    <LinearLayout
        android:layout_width="8dp"
        android:id="@+id/decoration"
        android:orientation="vertical"
        android:background="@color/grey700"
        android:layout_height="match_parent">

    </LinearLayout>

</LinearLayout>